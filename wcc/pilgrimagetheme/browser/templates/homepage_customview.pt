<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

    <metal:content-core fill-slot="content-core">
        <metal:block define-macro="listing" extend-macro="context/folder_listing/macros/content-core">
          
            <metal:entries fill-slot="entries">
                <metal:block use-macro="context/folder_listing/macros/entries">
                    <metal:entry fill-slot="entry">
                  <div class="tileItem visualIEFloatFix"
                     tal:define="item_object item/getObject;">
                      <tal:newsitem condition="python: item_type == 'News Item'">
                        <article class="post-wrapper">
                            <div class="large-1 columns post-detail-wrap">
                                <div class="post_author">
                                    <div class="username">
                                    <tal:name tal:condition="item_creator"
                                          tal:define="author python:pas_member.info(item_creator)">
                                        <a href="#" tal:attributes="href string:${navigation_root_url}/author/${item_creator}"
                                           tal:content="author/name_or_id"
                                           tal:omit-tag="not:author">
                                          Author Name
                                        </a>
                                        
                                      </tal:name>
                                    </div>
                                </div>
                            </div>
                                <div class="large-11 columns article post-content-wrap">
                                   <!--  <div class="post_thumb">
                                      <a href="#"
                                          tal:condition="exists:item_object/image_large"
                                          tal:attributes="href item_url">
                                           <img src="" alt=""
                                                tal:replace="structure python: path('nocall:item_object/tag')(scale='large')" />
                                      </a>
                                    </div> --> 

                                <!-- Note: add fist image here.Latest tag  -->
                                    <div class="post_info">
                                      <span class="post_date" tal:replace="python:toLocalizedTime(item_modified,long_format=1)">
                                                August 16, 2001 at 23:35:59
                                        </span>
                                    </div>
                                    <h2 class="post_title">
                                      <a href="#"
                                          class="summary url"
                                          tal:attributes="href item_url;"
                                          tal:content="item_title_or_id">
                                           Item Title
                                       </a>
                                    </h2>
                                    <div class="post_content">
                                      <p tal:condition="item_description" tal:content="item_description">Archbishop Emeritus Desmond Tutu has called on delegates attending next weekâ€™s United Nations Climate Summit in New York to take the first tangible steps to move humanity beyond the fossil fuel era.</p>
                                      <p>
                                          <a href=""
                                              tal:attributes="href item_url"> 
                                               
                                                <span i18n:translate="read_more">Read More.</span> 
                                          </a>
                                      </p>
                                    </div>
                                </div>
                              
                        </article> 
                  
                    </tal:newsitem>

                 </div>
                    </metal:entry>
                </metal:block>
            </metal:entries>
        </metal:block>
    </metal:content-core>

</body>
</html>